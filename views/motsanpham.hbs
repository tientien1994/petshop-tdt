    
    
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang chủ</title>
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/sp.css">
    <link rel="stylesheet" href="/css/sploaichinh.css">
    <link rel="stylesheet" href="/css/tintuc.css">
    <link rel="stylesheet" href="/css/media.css">
    <link rel="stylesheet" href="/css/motsp.css">
    
    <link rel="stylesheet" href="/font/font-awesome-4.7.0/css/font-awesome.min.css">
    
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&family=Pangolin&family=Roboto:ital,wght@0,100;0,300;1,100&display=swap" rel="stylesheet">
</head>
<body>
       
    <section class="container-fluid main-2">
        {{>header}}
        {{>slideBanner}}
    <section class="container-fluid">
        <div class="container">
            <div class="line-page">
                <p>
                    {{#each motsanpham}}
                    <span><a>Sản phẩm {{name}}</a></span>
                    {{#each Loaichinhs}}
                    <span><a>/{{name}}</a></span>
                    {{#each Loaisanphams}}
                    <span><a>/{{name}}</a></span>
                    {{#each Sanphams}}
                    <span><a>/{{name}} {{id}}</a></span>
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    {{/each}}
                </p>
            </div>
            {{#if motsanpham.length}}
            {{#each motsanpham}}
            {{#each Loaichinhs}}
            {{#each Loaisanphams}}
            
            {{#each Sanphams}}
                    
            <div class="chitietsp">
                <div class="chitietsp-top">
                    <div class="asp-left">
                        
                        <div class="asp-galery">
                            <div class="asp-galley-item">
                                <img src="/img/sp/{{../../../link}}/{{../../link}}/{{chialaydu id}}.jpg" alt="">
                            </div>
                            <div class="asp-galley-item">
                                <img src="/img/sp/{{../../../link}}/{{../../link}}/{{chialaydu2 id}}.jpg" alt="">
                            </div>
                            <div class="asp-galley-item">
                                <img src="/img/sp/{{../../../link}}/{{../../link}}/{{chialaydu3 id}}.jpg" alt="">
                            </div>
                        </div>
                        <div class="asp-img" id='asp-img'>
                            <div class="asp-anhzoom"></div>
                            <img class="asp-anhchinh" src="/img/sp/{{../../../link}}/{{../../link}}/{{chialaydu id}}.jpg" alt="">
                        </div>
                        
                    </div>
                    <div class="asp-right">
                        
                        <h3>{{name}} {{id}}</h3>
                        <p class="asp-thuonghieu">
                            <span>Thương hiệu: </span>
                            <span>{{#with Thuonghieu}}
                                {{name}}
                                {{/with}}</span>
                        </p>
                        <p class="asp-ma">
                            <span>Mã sản phẩm: </span>
                            <span>SKU0000{{id}}</span>
                        </p>
                        <p class="asp-sao">
                            <i class="fa fa-home"></i>
                            <i class="fa fa-home"></i>
                            <i class="fa fa-home"></i>
                            <i class="fa fa-home"></i>
                            <i class="fa fa-home"></i>
                            <span>Co 10 nguoi danh gia</span>
                        </p>
                        <p class="asp-gia">{{tien gia}} vnd
                            
                        </p>
                        <p class="asp-tietkiem">
                            <span>Tiết kiệm: </span>
                            <span>15%</span>
                        </p>
                        <div class="asp-soluong">
                            <label for="">Số lượng</label>
                            <div class="asp-soluong-input">
                                <p class="inputc">+</p>
                                <input type="text" id='sll' class='inputsl' value="1" name="soluong" readonly>
                                <p class="inputt">-</p>
                            </div>
                        </div>
                        <p class="asp-loaiship">
                            <span>Free ship nội thành với đơn hàng >200K</span>
                             <a href="">(Chính sách vận chuyển)</a>
                        </p>
                        <p class="asp-songuoimua">Đã có {{luotxem}} người xem</p>
                        <a href="" class="asp-buton">
                            <input type="text" name="spid" hidden value="{{id}}">
                            <input type="submit" value='Thêm vào giỏ hàng' class="themvaogiohang" data-id="{{id}}">
                        </a>
                        <p class="asp-hotline">
                            <i class="fa fa-home"></i>
                            0982410971
                        </p>
                        
                    
                    </div>
                </div>
                <div class="chitietsp-bot">
                    <div class="asp-tab">
                        <div class="asp-tab-head">
                            <ul>
                                <li class="asp-active">
                                    <p>Giới thiệu</p>                    
                                </li>
                                <li> <p>Bảo hành</p></li>
                                <li> <p>Đánh giá</p></li>
                                
                            </ul>
                        </div>
                        <div class="asp-tab-content">
                            <div class="asp-tab-item asp-item-ative">
                                <p class="gioithieusanpham-title">
                                    {{name}} {{id}}
                                </p>
                               {{{../../../../motsanpham.file}}}
                            </div>
                            <div class="asp-tab-item">
                                <div class="baohanhsanpham">
                                    <p class="baohanhsanpham-title">Phương thức thanh toán khi mua hàng tại cửa hàng</p>
                                    <p>Để tạo thuận lợi cho việc mua sắm của Quý Khách tại siêu thị cửa hàng, chúng tôi hỗ trợ Quý khách 6 phương thức thanh toán sau</p>
                                    <b>1- Dịch vụ giao hàng và thu tiền tận nơi COD: áp dụng cho khách hàng tại Hà Nội & Tp.HCM</b>
                                    <p>Sau khi Quý Khách hàng đặt mua hàng tại PetCity.vn, dựa vào các thông tin quý khách cung cấp, nhân viên của chúng tôi sẽ đến tận nơi giao hàng và Quý Khách thanh toán tiền ngay cho nhân viên giao hàng. Trong trường hợp Quý Khách muốn được giao hàng đến 1 địa chỉ khác, Quý Khách sẽ thanh toán trước với chúng tôi tại địa chỉ cửa hàng</p>
                                    <b>2- Thanh toán chuyển khoản qua Ngân hàng</b>
                                    <p>Bạn đến bất kỳ ngân hàng nào ở Việt Nam để chuyển tiền theo thông tin bên dưới (bạn không nhất thiết phải có tài khoản ngân hàng).</p>
                                    <b>Siêu thị PetCity có các tài khoản tại các Ngân hàng sau :</b>
                                    <p>Vietinbank</p>
                                    <p>Số TK : 61394652342</p>
                                    <p>Chủ TK: Trần Đình Tiến</p>
                                    <b>3- Thanh toán qua máy Vietinbank</b>
                                    <p>Ngoài các phương thức thanh toán trên, Quý khách cũng có thể dùng chuyển khoản bằng hệ thống ATM của ngân hàng  Vietinbank . Quý khách có thể đến bất kỳ máy ATM nào thuộc  Vietinbank  để chuyển khoản cho Petcity theo số tài khoản người nhận như sau :</p>
                                    <p>Vietinbank</p>
                                    <p>Số TK : 61394652342</p>
                                    <p>Chủ TK: Trần Đình Tiến</p>
                                    <b>4- Thanh toán bằng thẻ Visa, Master, các Thẻ ATM (thanh toán tại cửa hàng): </b>
                                    <p>Quý khách có thể thanh toán bằng thẻ Visa, Master.. các Thẻ ATM khác trực tiếp tại cửa hàng qua hệ thống máy Chấp nhận thanh toán POS (theo hình thức ưu đãi vẫn như khách hàng thanh toán bằng tiền mặt mà không phải mất phí giao dịch cho tất cả các sản phẩm)</p>
                                </div>
                            </div>
                            <div class="asp-tab-item">
                                
                                <div class="asp-tab-item-cmt">
                                    <div class="cmt-nd">
                                        {{#if ../../../../comment}}
                                        {{#each ../../../../comment}}
                                        <div class="cmt-nd-parent">
                                            <div class="cmt-nd-mot">
                                            <div class="cmt-nd-img">
                                                <img src="/img/cho.jpg" alt="">
                                            </div>
                                            <div class="cmt-nd-text">
                                                {{#with Nguoidung}}
                                                <div class="cmt-text-fullname">
                                                    <h4>{{fullname}}</h4>
                                                    <h5>{{ngaythang createdAt}}</h5>
                                                    <a onclick="motraloi({{../id}},'{{fullname}}')">Trả lời</a>
                                                </div>
                                                {{/with}}
                                                
                                            </div>
                                        </div>
                                        <div class="cmt-text-ndcmt">
                                                    {{ndcmt}}
                                                </div>
                                        </div>
                                        {{#each commentcon}}
                                        <div class="cmt-nd-child">
                                            <div class="cmt-nd-mot">
                                            <div class="cmt-nd-img">
                                                <img src="/img/cho.jpg" alt="">
                                            </div>
                                            <div class="cmt-nd-text">
                                                {{#with Nguoidung}}
                                                <div class="cmt-text-fullname">
                                                    <h4>{{fullname}}</h4>
                                                    <h5>{{ngaythang createdAt}}</h5>
                
                                                </div>
                                                {{/with}}
                                                
                                            </div>
                                        </div>
                                        <div class="cmt-text-ndcmt">
                                                    {{ndcmt}}
                                                </div>
                                        </div>
                                        {{/each}}
                                        
                                        
                                         {{/each}}
                                         {{else}}
                                         <div class="cmt-empty">Sản phẩm này chưa có bình luận, hãy là người bình luận đầu tiên</div>
                                         {{/if}}
                                    </div>
                                    <div class="cmt-form">
                                        {{#if ../../../../trangthaidangnhap}}
                                        <h4>Gửi bình luận</h4>

                                        <form action="/comment" method="POST">
                                            <div class="cmt-input-parent">
                                                <a onclick="xoatraloi()" id='dongtraloi'>Hủy trả lời</a>
                                                <label for="" id="tennguoitraloi"></label>
                                                
                                                <div class="cmt-input">
                                                    <label for="ndcmt">Nội dung</label>
                                                    <textarea type="text" id='ndcmt' cols="30" rows="5" name="ndcmt"></textarea>
                                                </div>
                                                <div class="cmt-input">
                                                    <input type="hidden" id='nguoidungId' name="nguoidungId" value="{{../../../../nguoidungId}}"/>
                                                    <input type="hidden" id='sanphamId' name="sanphamId" value="{{id}}"/>
                                                    <input type="hidden" id='parent'  name="parent" value=""/>
                                                    <input type="hidden" id='link'  name="link" value=""/>
                                                    
                                                </div>
                                                <div class="cmt-submit">
                                                    <button type="submit">Gửi bình luận</button>
                                                </div>
                                            </div>
                                            
                                        </form>
                                        {{else}}
                                        <h4><a id='returnpage' href="">Đăng nhập để gửi bình luận</a></h4>
                                        <script type="text/javascript">
                                            var returnpage=document.getElementById("returnpage");
                                            if(returnpage){
                                                    returnpage.href=`/dndk?returnpage=${document.location}`
                                                    console.log('trang thai dang nhap' + {{../../../../trangthaidangnhap}})
                                            }
                                            
                                            
                                        </script>
                                        {{/if}}
                                    </div>
                                    
                                </div>
                               
                                
                            </div>   
                        </div>
                    </div>
                    <div class="asp-tuongtu-bor">
                        <h5>Sản phẩm được quan tâm nhiều nhất</h5>
                        <div class="asp-tuongtu">
                            <div class="motloaisanphamchinh">
                            {{#each ../../../../luotxemcaonhat}}
                             
                                  {{>sanpham}}
                             
                            
                            {{/each}}
                            </div>
                            
                        </div>
                    </div>
                   
                </div>
            </div>
            {{/each}}
            {{/each}}
            {{/each}}
            {{/each}}
            {{else}}
            <div>Khong co san pham nay</div>
            {{/if}}
            
        </div>

    </section>
        {{>footer}}
        
        
    </section>

    <button id="back-to-top" title="Go to top"><i class="fa fa-arrow-up"></i></button>  
    <script src="/js/jquery-3.5.1.min.js"></script>

    <script src="/js/index.js"></script>
    <script src="/js/sanpham.js"></script>
     <script src="/js/giohang.js"></script>
     <script>
              $('#link').val(document.location) 
              $('#dongtraloi').hide()  
              function motraloi(parent, fullname){
                 $('#tennguoitraloi').html('Trả lời '+ fullname) 
                 $('#parent').val(parent);
                 $('#dongtraloi').show()
              }  
              function xoatraloi() {
                  $('#tennguoitraloi').html("") 
                 $('#parent').val('');
                 $('#dongtraloi').hide()
              }                            
    </script>
</body>
</body>
</html>