<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hiệu chỉnh</title>
    
</script>
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/sp.css">
    <link rel="stylesheet" href="/css/media.css">
    <link rel="stylesheet" href="/css/hieuchinh.css">
    <link rel="stylesheet" href="/font/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <script>
       
            if({{suanhanvien}}==true){
            alert('Sửa thành công')
            }
        
            if({{themnhanvien}}==true){
            alert('Thêm nhân viên thành công')
            }
        if({{xoanhanvien}}==true){
            alert('Xóa thành công')
            }
        

    </script>
   
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&family=Pangolin&family=Roboto:ital,wght@0,100;0,300;1,100&display=swap" rel="stylesheet">
</head>
<body>
       
    <section class="container-fluid main-2">
        {{>header}}
    <section class="container-fluid">
        
        <div class="container hieuchinhnhanvien">
            <div class="line-page">
                    <p>
                        <span><a href="/hieuchinh/nhanvien">Hiệu chỉnh nhân viên</a></span>
                       
                    </p>
                </div>
                
            <h5>Hiệu chỉnh nhân viên</h5>
            <div class="nutthemsanpham">
                            <a href="/hieuchinh/nhanvien/themnhanvien">Thêm nhân viên</a>
                    </div>
            
            <div class="hieuchinhnhanvien-col">
                <div class="hieuchinhnhanvien-nd">
                    {{#each tatcanhanvien}}
                    <div class="hieuchinhnhanvien-item">
                        <div class="hieuchinhnhanvien-trong">
                                <div class="slide-img">
                                    <img src="{{diachi}}" alt="">
                                    <div class="slide-icon">
                                        <a href="/hieuchinh/nhanvien/sua-{{id}}"><i class="fa fa-gear"></i></a>
                                    
                                    <a data-href="/hieuchinh/nhanvien/xoa-{{id}}" class="xoanhanvien" data-name="{{name}}" data-id="{{id}}"><i class="fa fa-times"></i></a>
                                    </div>
                                    
                                </div>
                                <div class="slide-title">
                                    <a><p>{{name}}</p></a>
                                    <p>{{luong}}</p>
                                    <p>{{Chinhanh.name}}</p>
                                    <p>{{phone}}</p>
                                    <p>{{Vitri.tenchucvu}}</p>
                                </div> 
                            
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
        

        {{>footer}}
        
        
    </section>
<div class="thongbaodautrang">
        
        <div class="thongbaodautrang-noidung">
            <div class="thongbaodautrang-dong"><i class="fa fa-times"></i></div>
            <h3>Hướng dẫn sử dụng</h3>
            <p><i class='fa fa-hand-o-right'></i>Hover vào nhân viên để thực hiện chức năng sửa xóa</p>
        </div>

    </div>  
    
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/index.js"></script>
    <script src="/js/hieuchinh.js"></script>
    
    
     
    
    
    
    
</body>
</html>